{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": false,
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "plugins": [
            { "transform": "typescript-transform-paths" },
            { "transform": "typescript-transform-paths", "afterDeclarations": true }],
        "lib": [
            "dom",
            "es2021"
        ]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist",
        "working-files"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
